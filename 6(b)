<body>
<div class="calculator">
    <h2>GST Calculator</h2>
    <label for="amount">Amount:</label>
    <input type="number" id="amount" min="0" value="0">

    <label for="gst">GST (%):</label>
    <select id="gst">
        <option value="3">3%</option>
        <option value="5">5%</option>
        <option value="12">12%</option>
        <option value="18">18%</option>
        <option value="28">28%</option>
    </select>

    <div class="result" id="actualAmount">Actual Amount: 0.00</div>
    <div class="result" id="gstAmount">GST: 0.00</div>
    <div class="result" id="totalAmount">Total: 0.00</div>

    <button id="resetBtn">Reset</button>
</div>

<script>
$(document).ready(function () {
    function calculateGST() {
        var amount = Number($('#amount').val());
        var gstPercent = Number($('#gst').val());
        var gstValue = (amount * gstPercent) / 100;
        var total = amount + gstValue;

        $('#actualAmount').text("Actual Amount: " + amount.toFixed(2));
        $('#gstAmount').text("GST: " + gstValue.toFixed(2));
        $('#totalAmount').text("Total: " + total.toFixed(2));
    }

    // Attach events OUTSIDE calculateGST
    $('#amount').on('input', calculateGST);
    $('#gst').on('change', calculateGST);

    $('#resetBtn').click(function () {
        $('#amount').val(0);
        $('#gst').val(3);
        calculateGST();
    });

    // Initial calculation
    calculateGST();
});
</script>
</body>
</html>
