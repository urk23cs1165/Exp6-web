<div class="order-form">
        <h3>Order Cake</h3>
        <div>
            Rainbow Cake (Quantity): <input type="number" id="rainbow" value="0" min="0"><br>
            Chocolate Cake (Quantity): <input type="number" id="chocolate" value="0" min="0"><br>
            Red Velvet Cake (Quantity): <input type="number" id="redvelvet" value="0" min="0"><br>
            Black Forest Cake (Quantity): <input type="number" id="blackforest" value="0" min="0"><br>
        </div>
        <button id="placeOrder">Place Order</button>

        <div class="bill" id="bill"></div>
    </div>
 <script>
        $(document).ready(function() {
            $('#placeOrder').click(function() {
                // Prices of cakes
                var prices = {
                    rainbow: 300,
                    chocolate: 200,
                    redvelvet: 250,
                    blackforest: 350
                };
 // Get quantities
                var qtyRainbow = parseInt($('#rainbow').val()) || 0;
                var qtyChocolate = parseInt($('#chocolate').val()) || 0;
                var qtyRedVelvet = parseInt($('#redvelvet').val()) || 0;
                var qtyBlackForest = parseInt($('#blackforest').val()) || 0;

                // Calculate total price
                var total = (qtyRainbow * prices.rainbow) +
                            (qtyChocolate * prices.chocolate) +
                            (qtyRedVelvet * prices.redvelvet) +
                            (qtyBlackForest * prices.blackforest);
         $('#bill').html("Purchase Order Bill!!!<br>Total Price: Rs. " + total);
            });
        });
    </script>
